@page
@using Movie_Database_App.Models
@model WatchListModel
@{
    ViewData["Title"] = "Watchlist";
    ViewData["ActivePage"] = ManageNavPages.WatchList;
}
<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>A collection of your saved movies to watch.</p>

        <div>
            <th>
                @Html.DisplayNameFor(model => model.UserObj)
            </th>
            <th>
                @Html.DisplayFor(model => model.UserObj)
            </th>
        </div>
        <div>
            @Html.Partial("~/Views/Movies/_watchList.cshtml", Model.UserObj.WatchList))
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


