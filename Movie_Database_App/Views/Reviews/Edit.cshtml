@using Movie_Database_App.Models
@model Movie_Database_App.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="MovieID" type="hidden" class="form-control" value=@Model.MovieID />
            <input asp-for="UserName" type="hidden" class="form-control" value=@Model.UserName />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />


            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MovieID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MovieID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <div class="form-group">
                <label asp-for="ReviewTitle" class="control-label"></label>
                <input asp-for="ReviewTitle" class="form-control" />
                <span asp-validation-for="ReviewTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                @*<input asp-for="Rating" class="form-control" />*@
                <span asp-validation-for="Rating" class="text-danger"></span>
                @Html.DropDownListFor(m => m.Rating,
                 new SelectList(Enum.GetValues(typeof(Review.ERating))),
                 "Set rating")
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" class="control-label"></label>
                <input asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

